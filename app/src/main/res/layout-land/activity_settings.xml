<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="adventures.ad.appic.main.activities.Settings">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundSwitch"
        android:checked="true"
        style="@style/TextAppearance.AppCompat.Widget.Switch"
        android:button="@android:color/darker_gray"
        android:background="@android:color/darker_gray"
        android:textOff="OFF"
        android:textOn="ON"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/musicTextView"
        android:layout_toRightOf="@+id/GPSButton"
        android:layout_toEndOf="@+id/GPSButton" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicSwitch"
        android:checked="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/TextAppearance.AppCompat.Widget.Switch"
        android:button="@android:color/darker_gray"
        android:background="@android:color/darker_gray"
        android:textOff="OFF"
        android:textOn="ON"
        android:layout_above="@+id/GPSButton"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sound"
        android:id="@+id/soundTextView"
        android:textStyle="normal|bold"
        android:textColor="#da3b3b3b"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/soundSwitch"
        android:layout_alignLeft="@+id/musicTextView"
        android:layout_alignStart="@+id/musicTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Music"
        android:id="@+id/musicTextView"
        android:textStyle="normal|bold"
        android:textColor="#da3b3b3b"
        android:textSize="25dp"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_above="@+id/GPSButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Settings"
        android:id="@+id/GPSButton"
        android:textColor="#da3b3b3b"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/soundTextView"
        android:layout_alignStart="@+id/soundTextView"
        android:layout_marginBottom="25dp"
        android:layout_toLeftOf="@+id/musicSwitch"
        android:layout_toStartOf="@+id/musicSwitch" />
</RelativeLayout>
