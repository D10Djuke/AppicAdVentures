<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fff9fdff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <fragment android:name="adventures.ad.appic.main.fragments.AccountFragment"
            android:id="@+id/account_fragment"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            tools:layout="@layout/fragment_account" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <fragment android:name="adventures.ad.appic.main.fragments.NewsFragment"
            android:id="@+id/news_fragment"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            tools:layout="@layout/fragment_news" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <fragment android:name="adventures.ad.appic.main.fragments.MapFragment"
            android:id="@+id/map_fragment"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            tools:layout="@layout/fragment_map" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <fragment android:name="adventures.ad.appic.main.fragments.InventoryFragment"
            android:id="@+id/inventory_fragment"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            tools:layout="@layout/fragment_inventory" />

    </LinearLayout>


</RelativeLayout>
